<section
    class="section swiper-container swiper-slider swiper-slider-modern swiper-container-horizontal swiper-container-fade"
    data-loop="true" data-autoplay="5000" data-simulate-touch="true" data-nav="true" data-slide-effect="fade">
    <div class="swiper-wrapper text-left" style="transition-duration: 0ms;">
        <%banners.forEach(el=>{%>
            <div class="swiper-slide"
                data-slide-bg="<%=el.img%>"
                style="background-image: url(&quot;<%=el.img%>&quot;); background-size: cover; width: 1726px; transform: translate3d(-18986px, 0px, 0px); opacity: 0; transition-duration: 0ms;"
                data-swiper-slide-index="0">
                <div class="swiper-slide-caption">
                    <div class="container">
                        <div class="row">
                            <div class="slider-modern-box">
                                <h2 class="oh slider-modern-title"> <span data-caption-animate="slideInDown"
                                        data-caption-delay="0" class="not-animated"> <a
                                            href="<%=el.link%>"><%=el.text%></a></span> </h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        <%})%>
    </div>
    <!-- Swiper Navigation-->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
    <!-- Swiper Pagination-->
    <div class="swiper-pagination swiper-pagination-style-2 swiper-pagination-clickable swiper-pagination-bullets">
        <span class="swiper-pagination-bullet"></span><span class="swiper-pagination-bullet"></span><span
            class="swiper-pagination-bullet"></span><span class="swiper-pagination-bullet"></span><span
            class="swiper-pagination-bullet"></span><span class="swiper-pagination-bullet"></span><span
            class="swiper-pagination-bullet swiper-pagination-bullet-active"></span><span
            class="swiper-pagination-bullet"></span><span class="swiper-pagination-bullet"></span><span
            class="swiper-pagination-bullet"></span>
    </div>
</section>